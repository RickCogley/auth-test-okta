{
  "name": "auth-test-1",
  "hooks": {
    "build": [
      "cp -avfr html dist",
      "sed -i . 's|{STAGE}|'$UP_STAGE'|g' dist/index.html",
      "find . -type f -name 'dist/*.html' -print0 | xargs -0 sed -i . 's|{STAGE}|'$UP_STAGE'|g'"
    ],
    "clean": [
      "up prune -s production -r 10",
      "rm -fr dist"
    ]
  },
  "stages": {
    "production": {
      "lambda": {
        "warm": true,
        "endpoint": "regional",
        "memory": 1024,
        "accelerate": true
      }
    }
  },
  "type": "static",
  "static":{
    "dir": "html"
  },
  "tags": {
    "Owner": "eSolia",
    "AppName": "AuthTest1",
    "PoweredBy": "ApexUp"
  },
  "profile": "apex-up-esolia",
  "regions": [
    "ap-northeast-1"
  ],
  "error_pages": {
    "enable": true,
    "variables": {
      "support_email": "rick.cogley@esolia.co.jp",
      "color": "#228ae6"
    }
  }
}
